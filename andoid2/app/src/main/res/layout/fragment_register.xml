<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suprunenko.andoid2.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/tfNewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tfNewPass" />

        <EditText
            android:id="@+id/tfNewPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:layout_below="@+id/tfNewUserName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name:"
            android:layout_toStartOf="@+id/tfNewUserName"
            android:layout_marginEnd="28dp"
            android:layout_alignTop="@+id/tfNewUserName"
            android:layout_alignBottom="@+id/tfNewUserName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tfNewPass"
            android:layout_alignEnd="@+id/lblUserName"
            android:layout_alignTop="@+id/tfNewPass"
            android:text="Password:" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tfNewPass"
            android:layout_below="@+id/tfNewPass"
            android:layout_marginTop="25dp"
            android:text="Register" />
    </RelativeLayout>

</FrameLayout>
